<!DOCTYPE html>
<html>
<head>
  <title>SubjectStopLight</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><%= image_tag("stoplight_brand.jpg", class: "img_brand") %></a>
      <a class="navbar-brand" href="/">Project Stop Light</a>
    </div>

    <div class = "nav navbar-right">
      <% if current_user %>
        <%= link_to current_user.user_name, user_path(current_user), class: "navbar-brand" %>
        <%= link_to "Sign Out", sign_out_path, class: "navbar-brand" %>
      <% else %>
        <%= link_to "Sign Up", sign_up_path, class: "navbar-brand" %>
        <%= link_to "Sign In", sign_in_path, class: "navbar-brand" %>
    </div>
      <% end %>
  </div>
</nav>

<div class="container">

<%= flash[:notice] %>

<%= yield %>

</div>
</body>
</html>
